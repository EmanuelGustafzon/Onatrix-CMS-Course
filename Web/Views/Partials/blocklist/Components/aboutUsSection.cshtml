@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.AboutUsSection)Model.Content;
}

<section class="py-6 px-4 md:px-36 flex flex-col md:w-8/12">
    <div>
        <p class="text-secondary text-md mb-3">@content.AboutUsLabel</p>
        <h2 class="text-primary text-4xl mb-6">@content.AboutUsTitle</h2>
        <div class="mb-3">
            @Html.Raw(content.AboutUsText)
        </div>
        <div class="w-52">
            <img src="@content.AboutUsSignature.Url()"/>
            <p>@content.AboutUsSignatureName</p>
        </div>
    </div>
</section>
