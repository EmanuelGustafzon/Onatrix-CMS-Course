@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.AboutUsSection)Model.Content;
}

<section class="py-8">
    <div class="flex flex-col md:flex-row mx-auto px-4 md:px-36 gap-8">
        <div class="max-w-86 md:w-1/3 flex flex-col gap-2">
            <img src="@content.CeoImage.Url()"/>
            <p>@content.CeoImageText</p>
        </div>
        <div class="md:w-2/3 flex flex-col gap-2">
            @Html.Raw(content.OurStoryContent)
        </div>
    </div>
</section>