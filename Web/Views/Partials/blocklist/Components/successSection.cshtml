@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.SuccessSection)Model.Content;
    var stats = content?.SuccessStastisitics?.ToArray() ?? [];
}

<section class="bg-primary pt-16 px-4 md:px-36">
    <div class="flex flex-col justify-center align-center relative">
        <div>@Html.Raw(content.SuccessTitle)</div>
        <div class="flex flex-col md:flex-row justify-center gap-2 py-8">
        <div class="absolute top-12">
            <img src="@content?.SuccessBackgroundImage?.Url()" />
        </div>
            @foreach(var stat in stats)
            {
                var statContent = stat.Content as ContentModels.SuccessStatisticsItem;
                if (statContent != null)
                {
                    <div class="max-w-76 md:flex md:flex-col gap-2 self-center">
                        @Html.Raw(statContent.SuccessStatistic)
                    </div>
                }
            }
        </div>
        <div class="w-2/2 md:w-2/3 self-center z-10 md:-mb-18">
            <img src="@content?.SuccessImage.Url()" />
        </div>
    </div>
</section>