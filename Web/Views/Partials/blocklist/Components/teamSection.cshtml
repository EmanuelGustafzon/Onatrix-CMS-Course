@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.TeamSection)Model.Content;
    var members = content.TeamMembers;
}
<section class="py-8 px-4 md:px-36">
    <div class="mx-auto flex flex-col gap-6">
        <div class="flex flex-col items-center">
            @Html.Raw(content.TeamTitle)
        </div>

        <div class="flex flex-wrap -mx-2">
            @for (int i = 0; i < members?.Count; i++)
            {
                var member = members[i];
                var widthClass = i < 3 ? "md:w-1/3" : "md:w-1/4";
                <div class="@widthClass w-full px-2 mb-4">
                    <partial name="Partials/blocklist/components/teamMemberItem" model="member" />
                </div>
            }
        </div>
    </div>
</section>

