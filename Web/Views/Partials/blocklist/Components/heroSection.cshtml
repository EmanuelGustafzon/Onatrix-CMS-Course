@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.HeroSection)Model.Content;
}

<section class="md:relative md:min-h-[300px] lg:min-h-[400px] xl:min-h-[500px] 2xl:min-h-[600px]">
    <div class="absolute hidden md:block">
        @if(content.HeroImage is not null)
        {
            <img src="@content.HeroImage.Url()" class="w-full h-full object-cover"/>
        }
    </div>
    <div class="md:max-w-7xl mx-auto pt-12 px-4 relative z-2">
        <div class="md:w-6/12 flex flex-col gap-6 justify-center">
            <h1 class="self-center md:self-start text-4xl text-primary font-bold">@content.HeroTitle</h1>
            <div class="self-center md:self-start">
                @Html.Raw(content.HeroText)
            </div>
            @if(content.HeroLink is not null)
            {
                var link = content.HeroLink.FirstOrDefault();
                <a class="bg-primary text-white py-2 px-10 self-center md:self-start rounded-sm cursor-pointer font-bold" href="@link?.Url">@link?.Name</a>
            }
        </div>
    </div>
</section>
