@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.InfoCard)Model.Content;
}
<div class="flex flex-col gap-4 p-4 mb-4">
    <h2 class="text-primary text-2xl">@content.InfoCardHeading</h2>
    <img class="object-cover w-full" src="@content?.InfoCardImage?.Url()" />
    <p class="text-dark w-full">@content?.InfoCardText</p>
</div>