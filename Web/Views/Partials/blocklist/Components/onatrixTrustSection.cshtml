@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.OnatrixTrustSection)Model.Content;
    var settings = Model.Settings as ContentModels.OnatrixTrustSettings;     
}

<section class="py-8 px-4 md:px-36">
    <div class="flex flex-col justify-center align-center gap-12">
        <div class="flex self-center">
            <div class="flex flex-col gap-4">@Html.Raw(content.TrustContent)</div>
        </div>
        @if(settings.ShowUrl)
        {
            <div class="self-center">
                <a href="@content.TrustLink?.First().Url" class="py-4 px-16 text-center bg-primary text-accent rounded-sm">
                    @content.TrustLink?.FirstOrDefault()?.Name
                </a>
            </div>
        }
        <div class="w-2/3 self-center hidden md:flex">
            <img src="@content?.TrustImage?.Url()" class="object-cover w-full h-full" />
        </div>
    </div>
</section>