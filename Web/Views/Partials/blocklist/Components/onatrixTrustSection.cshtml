@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.OnatrixTrustSection)Model.Content;
    var settings = Model.Settings as ContentModels.OnatrixTrustSettings;

    string positionClass = settings.ImageRight ? "flex-row" : "flex-col";
    string contentClass = settings.ImageRight ? "gap-2" : "gap-4";
    string imageClass = settings.ImageRight ? "w-1/2" : "w-2/3";
    var sectionColor = settings?.TrustUsBgColor?.Color ?? "#fff";
}

<section class="py-8 px-4 md:px-36 bg-[@sectionColor]">
    <div class="flex flex-col @positionClass justify-center align-center gap-12">
        <div class="flex self-center">
            <div class="flex flex-col @contentClass">@Html.Raw(content.TrustContent)</div>
        </div>
        @if(settings.ShowUrl)
        {
            <div class="self-center">
                <a href="@content.TrustLink?.First().Url" class="py-4 px-16 text-center bg-primary text-accent rounded-sm">
                    @content.TrustLink?.FirstOrDefault()?.Name
                </a>
            </div>
        }
        <div class="@imageClass self-center hidden md:flex">
            <img src="@content?.TrustImage?.Url()" class="object-cover w-full h-full" />
        </div>
    </div>
</section>